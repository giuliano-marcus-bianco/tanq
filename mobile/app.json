{
    "expo": {
        "name": "Tanq",
        "slug": "tanq",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "scheme": "tanq",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/splash-icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#1a1a2e"
        },
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.tanq.app",
            "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "Precisamos da sua localização para mostrar postos próximos.",
                "NSCameraUsageDescription": "Precisamos da câmera para você fotografar placas de preços."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#1a1a2e"
            },
            "package": "com.tanq.app",
            "permissions": [
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION",
                "CAMERA"
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "expo-router"
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}