{
    "name": "tanq",
    "version": "1.0.0",
    "private": true,
    "description": "Tanq - Plataforma colaborativa de preços de combustíveis",
    "workspaces": [
        "backend"
    ],
    "scripts": {
        "backend:dev": "npm run dev --workspace=backend",
        "backend:build": "npm run build --workspace=backend",
        "backend:test": "npm run test --workspace=backend",
        "backend:lint": "npm run lint --workspace=backend",
        "mobile:dev": "cd mobile && npm start",
        "mobile:test": "cd mobile && npm test",
        "mobile:lint": "cd mobile && npm run lint",
        "lint": "npm run lint --workspaces --if-present",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "test": "npm run test --workspaces --if-present"
    },
    "devDependencies": {
        "prettier": "^3.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}